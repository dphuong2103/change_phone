<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/txt_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device: " />

    <TextView
        android:id="@+id/txt_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Model: " />

    <TextView
        android:id="@+id/txt_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brand: " />

    <TextView
        android:id="@+id/txt_manufacturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manufacturer: " />

    <TextView
        android:id="@+id/txt_serialNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Serial No: " />

    <TextView
        android:id="@+id/txt_productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name: " />

    <TextView
        android:id="@+id/txt_releaseVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Release Version: " />

    <TextView
        android:id="@+id/txt_sdkVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SDK Version: " />

    <TextView
        android:id="@+id/txt_macAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAC Address: " />

    <TextView
        android:id="@+id/txt_fingerprint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fingerprint: " />

    <TextView
        android:id="@+id/txt_androidId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android ID: " />

    <TextView
        android:id="@+id/txt_ssid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SSID: " />

    <TextView
        android:id="@+id/txt_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latitude: " />

    <TextView
        android:id="@+id/txt_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Longitude: " />

    <Button
        android:id="@+id/btn_changeDeviceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Device Info" />
</LinearLayout>